<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/sponsoritemcardview"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="8dp"

    app:cardBackgroundColor="#00000000"
    android:background="#00000000"
    android:orientation="vertical"
    android:minHeight="@dimen/min_feature_card_height">

            <!--<ImageView
                android:id="@+id/sponsoritemlogo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="45"
                android:contentDescription="Sponsor Logo"
                android:src="@mipmap/ic_launcher_round" />-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000">
            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/sponsoritemlogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:roundedCornerRadius="0dp"
                android:background="#00000000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@drawable/tile_gradient_bottom_b"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@drawable/backgroundtint"/>
            <TextView
                android:id="@+id/sponsoritemname"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:maxLines="1"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="6dp"
                android:textColor="#ffffff"
                android:fontFamily="@font/bgothl"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_gravity="bottom"
                android:text="Sponsor Name" />
            </FrameLayout>

</com.google.android.material.card.MaterialCardView>