<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="238dp"
    android:layout_marginHorizontal="24dp"
    android:layout_marginBottom="24dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#00000000"
    android:background="#00000000"
    android:orientation="vertical"
    android:minHeight="@dimen/min_feature_card_height">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_merch_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:roundedCornerRadius="0dp"
            android:background="#00000000"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:background="@drawable/tile_gradient_bottom_b"/>
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/item_merch_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginHorizontal="8dp"
                android:fontFamily="@font/bgothl"
                android:layout_marginVertical="8dp"
                android:textColor="#ffffff"
                android:layout_gravity="top"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/item_merch_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:maxLines="2"
                    android:gravity="left"
                    android:textSize="14sp"
                    android:layout_weight="3"
                    />
                <!--View
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="0"/-->
                <TextView
                    android:id="@+id/item_merch_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:gravity="right"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>




    </FrameLayout>
</com.google.android.material.card.MaterialCardView>